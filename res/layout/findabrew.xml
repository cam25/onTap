<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

                     <ListView
                         android:id="@+id/listView1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="100dp" >

                     </ListView>

                     <ImageButton
                         android:id="@+id/scannerButn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentTop="true"
                         android:src="@drawable/reader" android:contentDescription="@string/todo"/>

                     <Button
                         android:id="@+id/searchButn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_marginTop="14dp"
                         android:layout_toLeftOf="@+id/scannerButn"
                         android:text="@string/search_beer" />

                     <EditText
                         android:id="@+id/beerText"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_alignTop="@+id/searchButn"
                         android:layout_toLeftOf="@+id/searchButn"
                         android:ems="10" android:inputType="text">

                         <requestFocus />
                     </EditText>

</RelativeLayout>
